.output__servo {
	position: absolute
	width: 100%
	height: 100%
	background: $color__white
}

.output__servo-on {
	position: absolute
	width: 100%
	height: 100%
	background: red
	z-index: 4
}

.output__servo-search {
	position: absolute
	width: 100%
	height: 100%
	background: $color__white
	display: none
	z-index: 3
}

.output__servo-search-bar {
	background: $color__white
	width: 100%
	padding-bottom: space(1)
}

.output__servo-back {
	position: absolute
	width: 45px
	height: 50px
	background-color: rgba(0,0,0,0)
	z-index: 2
	top: 0px
	cursor: pointer
	
	svg {
		position: absolute
		width: 20px
		top: 15px
		left: 10px
	}
}


.output__servo-back--green svg {
	fill: $color__class-green--primary
}


.output__servo-back--purple svg {
	fill: $color__class-purple--primary
}


.output__servo-back--orange svg {
	fill: $color__class-orange--primary
}

.output__servo-search-input {
	display: block
	width: 100%
	height: 50px
	border: 4px solid $color__background
	padding-left: 40px
	outline: none
	@extend .font__size--small
}

.output__servo-search-input--green {
	border-color: $color__class-green--primary
	color: $color__class-green--primary
}

.output__servo-search-input--purple {
	border-color: $color__class-purple--primary
	color: $color__class-purple--primary
}

.output__servo-search-input--orange {
	border-color: $color__class-ornage--primary
	color: $color__class-ornage--primary
}


.output__servo-search-results {
	position: absolute
	width: 100%
	top: 60px
	bottom: 0px
	overflow: scroll
}

.output__servo-search-results--green {
	input {
		color: $color__class-green--primary
	}
	
	div:hover {
		input {
			border-color: $color__class-green--primary
		}
	}
	
}

.output__servo-search-results--purple {
	input {
		color: $color__class-purple--primary
	}
	
	.output__servo-search-result-icon:after {
		background-position-y: -26px
	}
	
	div:hover {
		input {
			border-color: $color__class-purple--primary
		}
	}
	
}

.output__servo-search-results--orange {
	input {
		color: $color__class-orange--primary
	}

	.output__servo-search-result-icon:after {
		background-position-y: -52px
	}
	
	div:hover {
		input {
			border-color: $color__class-orange--primary
		}
	}
	
}
.output__servo-search-result {
	height: 50px
	margin-bottom: space(1)
	position: relative
	cursor: pointer
	
	@extend .font__size--small
}

.output__servo-search-result-icon {
	position absolute
	width: 50px
	height: 50px
	background: transparent
	
	svg {
		pointer-events: none
		width: 24px
		position: absolute
		top: 12px
		left: 12px
	}
}


.output__servo-search-result-icon--green svg {
	fill: $color__class-green--primary
}


.output__servo-search-result-icon--purple svg {
	fill: $color__class-purple--primary
}

.output__servo-search-result-icon--orange svg {
	fill: $color__class-orange--primary
}



.output__servo-search-result-input {
	pointer-events: none
	width: 100%
	height: 50px
	padding-left: 10px
	color: inherit
	border: 4px solid $color__background
}

.output__servo-class {
	text-align: left
	display: flex
	align-items: center
	height: 33%
}

.output__servo-delete {
	position: absolute
	width: 40px
	height: 42px
	right: 4px
	cursor: pointer
	background: white
	background-image: url(../static/outputs/delete-icon.svg)
	background-size: 40%
	background-repeat: no-repeat
	background-position: center center
}


.output__servo-edit {
	position: absolute
	z-index: 2
	width: 16px
	height: 50px
	opacity: 0.2
	background-image url(../static/outputs/edit-icon.svg)
	background-position 0 center
	background-repeat: no-repeat
	left: space(1.2)
	pointer-events: none
	
	svg {
		fill: $color__class-green--primary
		width: 100%
		height: 100%
		pointer-events: none
	}
}

.output__servo-edit:after {
	content: "Show"
	position: absolute
	top: 0
	left: 25px
	line-height: 50px
	color: $color__black
}


.output__servo-edit--green svg {
	fill: $color__class-green--primary
}


.output__servo-edit--purple svg {
	fill: $color__class-purple--primary
}

.output__servo-edit--orange svg {
	fill: $color__class-orange--primary
}



.output__servo-input {
	padding-left: space(8)
	padding-right: 40px
	height: 50px
	border: 4px solid $color__background
	outline: none
	position relative
	cursor: pointer
	
	@extend .font__size--small
}

.output__servo-input--green {
	color: $color__class-green--primary
}

.output__servo-input--purple {
	color: $color__class-purple--primary	
}

.output__servo-input--orange {
	color: $color__class-orange--primary	
}

.output__servo-input--green:hover, .output__servo-input--green-selected {
	border-color: $color__class-green--primary
}

.output__servo-input--purple:hover, .output__servo-input--purple-selected {
	border-color: $color__class-purple--primary	
}

.output__servo-input--orange:hover, .output__servo-input--orange-selected {
	border-color: $color__class-orange--primary	
}

.output__servo-input--nothing {
	color: rgba($color__black, 0.2);
}

.output__servo-on {
	display: flex
	flex-wrap: wrap
}

.output__servo {
	canvas {
		z-index: 100
		position: absolute
	}
}